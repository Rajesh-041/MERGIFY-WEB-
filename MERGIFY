const Card = ({ children, className = "", noPadding = false }) => (
  <div className={`glass-card rounded-[2.5rem] premium-shadow h-full transition-all duration-300 ${noPadding ? '' : 'p-6 md:p-8'} ${className}`}>
    {children}
  </div>
);

const Button = ({ children, onClick, variant = "primary", className = "", type = "button", disabled = false }) => {
  const styles = {
    primary: "bg-gradient-to-r from-indigo-600 to-purple-600 text-white hover:opacity-90 shadow-xl shadow-indigo-100",
    secondary: "bg-indigo-50 text-indigo-700 hover:bg-indigo-100",
    danger: "bg-rose-500 text-white hover:bg-rose-600 shadow-xl shadow-rose-100",
    outline: "border-2 border-slate-100 text-slate-600 hover:bg-slate-50",
    accent: "bg-white text-slate-900 shadow-lg border border-slate-100 hover:bg-slate-50"
  };
  return (
    <button 
      type={type}
      disabled={disabled}
      onClick={onClick} 
      className={`px-6 py-4 rounded-2xl font-bold transition-all active:scale-95 flex items-center justify-center gap-2 ${styles[variant]} ${className} ${disabled ? 'opacity-50 cursor-not-allowed grayscale' : ''}`}
    >
      {children}
    </button>
  );
};

const ViewModeButton = ({ viewMode, toggleViewMode, className = "" }) => (
  <button 
    onClick={toggleViewMode}
    title={`View Mode: ${viewMode}`}
    className={`p-2.5 bg-white/60 backdrop-blur-md text-slate-600 rounded-xl hover:bg-white transition-all shadow-sm border border-slate-100 flex items-center gap-2 ${className}`}
  >
    {viewMode === 'auto' ? <Laptop size={18} /> : viewMode === 'mobile' ? <Smartphone size={18} /> : <Monitor size={18} />}
    <span className="text-[10px] font-black uppercase tracking-widest hidden sm:inline">{viewMode}</span>
  </button>
);

// --- Auth Components ---

const AuthBackground = () => (
  <div className="absolute inset-0 -z-10 overflow-hidden">
    <img
      src="https://images.unsplash.com/photo-1541339907198-e08759dfc3f0?auto=format&fit=crop&q=80&w=2000"
      className="w-full h-full object-cover opacity-20 blur-sm scale-105"
      alt=""
    />
    <div className="absolute inset-0 bg-gradient-to-br from-indigo-900/40 via-purple-900/20 to-slate-900/50" />
  </div>
);

const LoginScreen = ({ role, onLogin, onRegister, onBack, error, viewMode, toggleViewMode }) => {
  const [isRegister, setIsRegister] = useState(false);
  const [regNo, setRegNo] = useState('');
  const [fullName, setFullName] = useState('');
  const [email, setEmail] = useState('');
  const [loading, setLoading] = useState(false);

  const handleSubmit = async (e) => {
    e.preventDefault();
    setLoading(true);
    if (isRegister) await onRegister({ regNo, fullName, email, role });
    else await onLogin(regNo, role);
    setLoading(false);
  };

  return (
    <div className="min-h-screen relative flex flex-col items-center justify-center p-6 overflow-hidden">
      <AuthBackground />
      <div className="absolute top-8 right-8">
        <ViewModeButton viewMode={viewMode} toggleViewMode={toggleViewMode} />
      </div>

      <div className="w-full max-w-md animate-premium">
        <div className="text-center mb-10">
          <Logo className="w-20 h-20 mx-auto mb-6 drop-shadow-2xl" />
          <h2 className="text-4xl font-black text-slate-900 tracking-tight uppercase leading-none">
            {isRegister ? 'JOIN MERGIFY' : 'PORTAL ACCESS'}
          </h2>
          <p className="text-indigo-600 font-bold uppercase text-[11px] tracking-[0.2em] mt-3">
            PROCEEDING AS {role}
          </p>
        </div>

        {error && (
          <div className="mb-6 p-4 bg-rose-50/90 backdrop-blur-md border border-rose-100 rounded-2xl flex items-center gap-3 text-rose-600 animate-premium">
            <AlertCircle size={20} />
            <span className="text-sm font-bold uppercase">{error}</span>
          </div>
        )}

        <Card className="p-8 md:p-10 border-none shadow-2xl">
          <form onSubmit={handleSubmit} className="space-y-5">
            {isRegister && (
              <div className="space-y-2">
                <label className="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Full Name</label>
                <div className="relative group">
                  <User className="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-indigo-600 transition-colors" size={18} />
                  <input 
                    required type="text" value={fullName} onChange={(e) => setFullName(e.target.value)}
                    className="w-full pl-12 pr-4 py-4 bg-slate-50 border border-transparent focus:bg-white focus:border-indigo-500 rounded-2xl transition-all font-bold text-slate-700" 
                    placeholder="ENTER FULL NAME" 
                  />
                </div>
              </div>
            )}

            <div className="space-y-2">
              <label className="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Register Number</label>
              <div className="relative group">
                <Hash className="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-indigo-600 transition-colors" size={18} />
                <input 
                  required type="text" value={regNo} onChange={(e) => setRegNo(e.target.value)}
                  className="w-full pl-12 pr-4 py-4 bg-slate-50 border border-transparent focus:bg-white focus:border-indigo-500 rounded-2xl transition-all font-bold text-slate-700 font-mono" 
                  placeholder="E.G. 20240001" 
                />
              </div>
            </div>

            <div className="space-y-2">
              <label className="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Campus Email</label>
              <div className="relative group">
                <Mail className="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-indigo-600 transition-colors" size={18} />
                <input 
                  required type="email" value={email} onChange={(e) => setEmail(e.target.value)}
                  className="w-full pl-12 pr-4 py-4 bg-slate-50 border border-transparent focus:bg-white focus:border-indigo-500 rounded-2xl transition-all font-bold text-slate-700" 
                  placeholder="ID@CAMPUS.EDU" 
                />
              </div>
            </div>

            <Button type="submit" variant="primary" className="w-full text-lg mt-4 uppercase tracking-wider" disabled={loading}>
              {loading ? <Clock className="animate-spin" /> : (isRegister ? 'REGISTER NOW' : 'SIGN IN')}
            </Button>
          </form>

          <div className="mt-8 pt-8 border-t border-slate-100 text-center">
            <button 
              onClick={() => setIsRegister(!isRegister)}
              className="text-sm font-bold text-indigo-600 hover:text-purple-600 transition-colors uppercase"
            >
              {isRegister ? 'ALREADY REGISTERED? LOG IN' : "NEW USER? REGISTER NOW"}
            </button>
          </div>
        </Card>

        <button onClick={onBack} className="w-full mt-10 text-slate-500 font-black text-[10px] hover:text-white transition-colors uppercase tracking-[0.4em]">
          ‚Üê BACK TO SELECTION
        </button>
      </div>
    </div>
  );
};

// --- Main Application ---

export default function App() {
  const [role, setRole] = useState(null); 
  const [user, setUser] = useState(null); 
  const [firebaseUser, setFirebaseUser] = useState(null);
  const [activeTab, setActiveTab] = useState('home');
  const [isSplashScreen, setIsSplashScreen] = useState(true);
  const [authError, setAuthError] = useState('');
  const [viewMode, setViewMode] = useState('auto');
  const [windowWidth, setWindowWidth] = useState(typeof window !== 'undefined' ? window.innerWidth : 1024);

  useEffect(() => {
    const handleResize = () => setWindowWidth(window.innerWidth);
    window.addEventListener('resize', handleResize);
    return () => window.removeEventListener('resize', handleResize);
  }, []);

  const toggleViewMode = () => {
    const modes = ['auto', 'mobile', 'desktop'];
    const nextIndex = (modes.indexOf(viewMode) + 1) % modes.length;
    setViewMode(modes[nextIndex]);
  };

  useEffect(() => {
    const initAuth = async () => {
      try {
        if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
          await signInWithCustomToken(auth, __initial_auth_token);
        } else {
          await signInAnonymously(auth);
        }
      } catch (e) {
        console.error("Auth initialization failed", e);
      }
    };
    initAuth();
    const unsubscribe = onAuthStateChanged(auth, (u) => {
      setFirebaseUser(u);
      setTimeout(() => setIsSplashScreen(false), 800);
    });
    return () => unsubscribe();
  }, []);

  const handleRegister = async (data) => {
    if (!firebaseUser) return;
    setAuthError('');
    try {
      const directoryRef = doc(db, 'artifacts', appId, 'public', 'data', 'user_directory', data.regNo);
      const existing = await getDoc(directoryRef);
      if (existing.exists()) {
        setAuthError('ID ALREADY IN USE');
        return;
      }
      await setDoc(directoryRef, { regNo: data.regNo, name: data.fullName.toUpperCase(), role: data.role, uid: firebaseUser.uid });
      const profileRef = doc(db, 'artifacts', appId, 'users', firebaseUser.uid, 'profile', 'data');
      await setDoc(profileRef, { regNo: data.regNo, name: data.fullName.toUpperCase(), email: data.email, role: data.role, joinedAt: new Date().toISOString() });
      setUser({ regNo: data.regNo, name: data.fullName.toUpperCase() });
    } catch (err) { setAuthError('REGISTRATION FAILED'); }
  };

  const handleLogin = async (regNo, selectedRole) => {
    if (!firebaseUser) return;
    setAuthError('');
    try {
      const directoryRef = doc(db, 'artifacts', appId, 'public', 'data', 'user_directory', regNo);
      const userSnap = await getDoc(directoryRef);
      if (userSnap.exists()) {
        const userData = userSnap.data();
        if (userData.role !== selectedRole) {
          setAuthError(`ID IS NOT REGISTERED AS ${selectedRole.toUpperCase()}`);
          return;
        }
        setUser({ regNo: userData.regNo, name: userData.name });
      } else { setAuthError('ACCOUNT NOT FOUND'); }
    } catch (err) { setAuthError('LOGIN FAILED'); }
  };

  if (isSplashScreen) {
    return (
      <div className="fixed inset-0 bg-white flex flex-col items-center justify-center p-6 z-50">
        <GlobalStyles />
        <div className="w-32 h-32 mb-8 animate-premium">
          <Logo className="w-full h-full drop-shadow-[0_20px_40px_rgba(99,102,241,0.3)]" />
        </div>
        <h1 className="text-5xl font-black text-indigo-950 tracking-tighter mb-4 uppercase leading-none">MERGIFY</h1>
        <div className="w-12 h-1.5 bg-indigo-100 rounded-full overflow-hidden">
          <div className="h-full bg-indigo-600 animate-[loading_1.5s_infinite_ease-in-out]" style={{width: '60%'}}></div>
        </div>
        <style>{`@keyframes loading { 0% { transform: translateX(-100%); } 100% { transform: translateX(200%); } }`}</style>
      </div>
    );
  }

  if (!role) {
    return (
      <div className="min-h-screen relative flex flex-col items-center justify-center p-6 md:p-8 overflow-hidden">
        <GlobalStyles />
        <AuthBackground />
        <div className="absolute top-8 right-8">
          <ViewModeButton viewMode={viewMode} toggleViewMode={toggleViewMode} />
        </div>

        <div className="w-full max-w-md animate-premium">
          <div className="text-center mb-12">
            <Logo className="w-24 h-24 mx-auto mb-6 drop-shadow-2xl" />
            <h2 className="text-5xl font-black text-slate-900 tracking-tighter uppercase leading-none">MERGIFY.</h2>
            <p className="text-indigo-900/60 font-bold uppercase text-xs tracking-[0.2em] mt-3">Unified Campus Platform</p>
          </div>
          <div className="space-y-4">
            <RoleButton icon={<GraduationCap size={32} />} title="STUDENT PORTAL" desc="ACADEMICS, SAFETY & TOOLS" onClick={() => setRole('student')} />
            <RoleButton icon={<UserCheck size={32} />} title="FACULTY PORTAL" desc="MANAGEMENT & MONITORING" onClick={() => setRole('teacher')} color="purple" />
          </div>
        </div>
      </div>
    );
  }

  if (!user) return (
    <>
      <GlobalStyles />
      <LoginScreen 
        role={role} onLogin={handleLogin} onRegister={handleRegister}
        onBack={() => setRole(null)} error={authError}
        viewMode={viewMode} toggleViewMode={toggleViewMode}
      />
    </>
  );

  const isDesktopLayout = viewMode === 'desktop' || (viewMode === 'auto' && windowWidth >= 1024);
  const showMobileNav = !isDesktopLayout;
  const showDesktopNav = isDesktopLayout;

  return (
    <div className={`min-h-screen transition-all ${showDesktopNav ? 'pl-24' : 'pb-24'}`}>
      <GlobalStyles />
      <Header role={role} user={user} onLogout={() => {setUser(null); setRole(null);}} viewMode={viewMode} toggleViewMode={toggleViewMode} />
      <main className={`max-w-6xl mx-auto p-6 md:p-10 transition-all ${viewMode === 'desktop' ? 'min-w-[1024px]' : ''}`}>
        {role === 'student' ? (
          <StudentContent activeTab={activeTab} user={user} isDesktop={isDesktopLayout} />
        ) : (
          <TeacherContent activeTab={activeTab} user={user} isDesktop={isDesktopLayout} />
        )}
      </main>
      <Navigation activeTab={activeTab} setActiveTab={setActiveTab} role={role} showMobileNav={showMobileNav} showDesktopNav={showDesktopNav} />
    </div>
  );
}

// --- Shared Elements ---

const RoleButton = ({ icon, title, desc, onClick, color = "indigo" }) => (
  <button onClick={onClick} className="w-full group bg-white/90 backdrop-blur-xl p-8 rounded-[2.5rem] border border-white shadow-xl hover:shadow-2xl hover:shadow-indigo-200 transition-all flex items-center gap-6 text-left">
    <div className={`w-16 h-16 rounded-3xl flex items-center justify-center transition-transform group-hover:scale-110 flex-shrink-0 ${color === 'indigo' ? 'bg-indigo-50 text-indigo-600' : 'bg-purple-50 text-purple-600'}`}>
      {icon}
    </div>
    <div>
      <h3 className="font-extrabold text-xl text-slate-900 tracking-tight uppercase leading-none">{title}</h3>
      <p className="text-xs text-slate-500 font-bold tracking-widest mt-2 uppercase opacity-60 leading-none">{desc}</p>
    </div>
    <ChevronRight className="ml-auto text-slate-300 group-hover:text-indigo-600 group-hover:translate-x-1 transition-all" />
  </button>
);

const Header = ({ role, user, onLogout, viewMode, toggleViewMode }) => (
  <header className="bg-white/70 backdrop-blur-xl sticky top-0 z-30 px-6 md:px-10 py-5 flex items-center justify-between border-b border-slate-200/50 shadow-sm">
    <div className="flex items-center gap-4">
      <Logo className="w-10 h-10 flex-shrink-0" />
      <div>
        <h1 className="font-black text-xl text-slate-900 tracking-tighter leading-none uppercase">MERGIFY</h1>
        <span className="text-[10px] font-black uppercase tracking-[0.2em] text-indigo-600">{role} PORTAL</span>
      </div>
    </div>
    
    <div className="flex items-center gap-3">
      <ViewModeButton viewMode={viewMode} toggleViewMode={toggleViewMode} className="mr-2" />
      <div className="hidden sm:block text-right mr-3">
        <p className="text-[9px] font-black text-slate-400 uppercase tracking-widest">SESSION ACTIVE</p>
        <p className="text-sm font-extrabold text-slate-800 line-clamp-1 uppercase leading-none">{user.name}</p>
      </div>
      <button onClick={onLogout} className="p-3 bg-slate-100 hover:bg-rose-50 text-slate-600 hover:text-rose-600 rounded-2xl transition-all">
        <LogOut size={20} />
      </button>
    </div>
  </header>
);

const Navigation = ({ activeTab, setActiveTab, role, showMobileNav, showDesktopNav }) => {
  const tabs = role === 'student' ? [
    { id: 'home', icon: GraduationCap, label: 'ACADEMICS' },
    { id: 'campus', icon: Wrench, label: 'UTILITIES' },
    { id: 'safety', icon: ShieldAlert, label: 'SAFETY' },
    { id: 'ai', icon: Sparkles, label: 'PLANNER' },
  ] : [
    { id: 'home', icon: BarChart3, label: 'DASHBOARD' },
    { id: 'attendance', icon: UserCheck, label: 'ATTENDANCE' },
    { id: 'timetable', icon: Calendar, label: 'TIMETABLE' },
    { id: 'comms', icon: Megaphone, label: 'COMMS' },
    { id: 'monitoring', icon: UserX, label: 'MONITOR' },
  ];

  return (
    <>
      {showMobileNav && (
        <nav className="fixed bottom-0 left-0 right-0 bg-slate-900/95 backdrop-blur-2xl border-t border-slate-800 flex items-center justify-around h-20 z-40 shadow-2xl px-2">
          {tabs.map((tab) => (
            <button 
              key={tab.id} 
              onClick={() => setActiveTab(tab.id)} 
              className={`flex flex-col items-center justify-center flex-1 h-full transition-all relative ${activeTab === tab.id ? 'text-indigo-400' : 'text-slate-500 hover:text-slate-300'}`}
            >
              <tab.icon size={22} className={activeTab === tab.id ? 'stroke-[2.5px]' : ''} />
              <span className="text-[8px] mt-2 font-black uppercase tracking-widest text-center leading-none">{tab.label}</span>
              {activeTab === tab.id && <div className="absolute bottom-2 w-1.5 h-1.5 bg-indigo-400 rounded-full shadow-[0_0_8px_rgba(129,140,248,0.8)]" />}
            </button>
          ))}
        </nav>
      )}

      {showDesktopNav && (
        <nav className="fixed left-0 top-0 bottom-0 w-24 bg-slate-900 flex flex-col items-center py-10 z-40 shadow-2xl">
          <Logo className="w-12 h-12 mb-12 flex-shrink-0" />
          <div className="flex flex-col gap-8 flex-1">
            {tabs.map((tab) => (
              <button key={tab.id} onClick={() => setActiveTab(tab.id)} className={`group relative p-4 rounded-3xl transition-all ${activeTab === tab.id ? 'bg-indigo-600 text-white shadow-2xl shadow-indigo-500/40' : 'text-slate-500 hover:text-slate-100'}`}>
                <tab.icon size={24} />
                <span className="absolute left-full ml-6 px-3 py-2 bg-slate-800 text-white text-[10px] font-bold uppercase tracking-[0.2em] rounded-xl opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none z-50">
                  {tab.label}
                </span>
              </button>
            ))}
          </div>
          <div className="mt-auto">
             <div className="w-12 h-12 rounded-2xl bg-slate-800 flex items-center justify-center text-slate-500 hover:text-white transition-colors cursor-pointer" onClick={() => setActiveTab('settings')}>
                <Settings size={22} />
             </div>
          </div>
        </nav>
      )}
    </>
  );
};

// --- Shared Views ---

const SettingsView = ({ user }) => (
  <div className="max-w-xl mx-auto space-y-10 animate-premium text-center pb-20 uppercase">
    <div className="relative inline-block uppercase">
      <div className="w-32 h-32 rounded-[3rem] bg-indigo-900 mx-auto flex items-center justify-center text-white text-4xl font-black shadow-2xl shadow-indigo-200 uppercase">
        {user.name ? user.name.split(' ').map(n => n[0]).join('') : 'U'}
      </div>
      <div className="absolute -bottom-2 -right-2 p-3 bg-emerald-500 text-white rounded-2xl border-4 border-white shadow-lg">
        <ShieldCheck size={20} />
      </div>
    </div>
    
    <div>
      <h2 className="text-4xl font-black text-slate-900 tracking-tight uppercase leading-none">{user.name}</h2>
      <p className="text-indigo-600 font-black text-[11px] uppercase tracking-[0.3em] mt-3">ID NUMBER: {user.regNo}</p>
    </div>

    <Card className="text-left divide-y divide-slate-100 p-0 overflow-hidden shadow-2xl uppercase">
      <button className="w-full px-10 py-6 flex items-center justify-between hover:bg-slate-50 transition-colors">

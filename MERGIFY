// --- AI Planner Section ---

const StudentAIStudy = ({ isDesktop }) => {
  const [step, setStep] = useState(1);
  const [timeframe, setTimeframe] = useState('WEEK');
  const [activityCount, setActivityCount] = useState(3);
  const [activities, setActivities] = useState([]);
  const [timetable, setTimetable] = useState(null);

  const startConfig = () => {
    setActivities(Array.from({ length: activityCount }, (_, i) => ({ id: i, name: '', hours: 1 })));
    setStep(2);
  };

  const generateTimetable = () => {
    const days = timeframe === 'DAY' ? ['TODAY'] : ['MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT', 'SUN'];
    const slots = ['09:00', '11:00', '14:00', '16:00', '18:00'];
    
    const newTimetable = days.map(day => ({
      day,
      slots: slots.map((time, idx) => ({
        time,
        activity: activities[idx % activities.length]?.name || 'REVISION',
        isBreak: idx % 3 === 2
      }))
    }));

    setTimetable(newTimetable);
    setStep(3);
  };

  const updateCell = (dayIdx, slotIdx, newName) => {
    const next = [...timetable];
    next[dayIdx].slots[slotIdx].activity = newName;
    setTimetable(next);
  };

  return (
    <div className="max-w-6xl mx-auto space-y-10 animate-premium pb-20 uppercase">
      <header className="text-center uppercase">
        <div className="inline-flex p-8 bg-indigo-100 text-indigo-600 rounded-[3rem] shadow-2xl shadow-indigo-100 mb-6 uppercase">
          <Sparkles size={48} className="uppercase" />
        </div>
        <h2 className="text-6xl font-black text-slate-900 tracking-tighter uppercase leading-none uppercase">AI PLANNER.</h2>
        <p className="text-slate-500 font-bold text-lg mt-4 opacity-70 tracking-[0.1em] uppercase">ACADEMIC OPTIMIZATION ENGINE</p>
      </header>

      {step === 1 && (
        <Card className="max-w-2xl mx-auto shadow-2xl uppercase">
          <div className="space-y-10 uppercase">
            <div className="uppercase">
              <label className="text-[11px] font-black text-slate-400 uppercase tracking-[0.3em] mb-6 block uppercase">PLANNING TIMEFRAME</label>
              <div className="grid grid-cols-3 gap-4 uppercase">
                {['DAY', 'WEEK', 'MONTH'].map(t => (
                  <button key={t} onClick={() => setTimeframe(t)} className={`p-6 rounded-3xl border-2 transition-all font-black uppercase ${timeframe === t ? 'border-indigo-600 bg-indigo-50 text-indigo-900 shadow-md' : 'border-slate-100 text-slate-400 hover:border-indigo-200'}`}>
                    {t}
                  </button>
                ))}
              </div>
            </div>

            <div className="uppercase">
              <label className="text-[11px] font-black text-slate-400 uppercase tracking-[0.3em] mb-6 block uppercase">ACTIVITIES ({activityCount})</label>
              <input type="range" min="1" max="8" value={activityCount} onChange={(e) => setActivityCount(parseInt(e.target.value))} className="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer accent-indigo-600 custom-range uppercase" />
            </div>

            <Button onClick={startConfig} variant="primary" className="w-full py-6 rounded-[2rem] text-xl font-black tracking-widest uppercase">CONFIGURE <ArrowRight size={24}/></Button>
          </div>
        </Card>
      )}

      {step === 2 && (
        <Card className="max-w-2xl mx-auto shadow-2xl uppercase">
          <div className="flex items-center gap-4 mb-8 uppercase">
            <button onClick={() => setStep(1)} className="p-3 bg-slate-100 rounded-2xl text-slate-500 hover:text-indigo-600 transition-all uppercase"><ArrowLeft size={20}/></button>
            <h4 className="font-black text-2xl uppercase tracking-tight uppercase">DETAILS</h4>
          </div>
          <div className="space-y-4 max-h-[400px] overflow-y-auto pr-2 no-scrollbar uppercase">
            {activities.map((act, idx) => (
              <div key={act.id} className="p-6 bg-slate-50/50 rounded-[2rem] border border-slate-100 flex items-center gap-6 group hover:border-indigo-400 transition-all uppercase">
                <div className="w-12 h-12 rounded-2xl bg-indigo-600 text-white flex items-center justify-center font-black text-lg uppercase leading-none">{idx + 1}</div>
                <div className="flex-1 grid grid-cols-3 gap-4 uppercase">
                   <div className="col-span-2 uppercase">
                      <input 
                        value={act.name} 
                        onChange={(e) => {
                          const next = [...activities];
                          next[idx].name = e.target.value.toUpperCase();
                          setActivities(next);
                        }}
                        className="w-full bg-white border border-slate-200 rounded-xl px-4 py-3 font-black text-sm focus:ring-2 focus:ring-indigo-500 uppercase" 
                        placeholder="NAME (E.G. PHYSICS)" 
                      />
                   </div>
                   <div className="relative uppercase">
                      <input 
                        type="number"
                        value={act.hours} 
                        onChange={(e) => {
                          const next = [...activities];
                          next[idx].hours = e.target.value;
                          setActivities(next);
                        }}
                        className="w-full bg-white border border-slate-200 rounded-xl px-4 py-3 font-black text-sm focus:ring-2 focus:ring-indigo-500 text-center uppercase" 
                      />
                      <span className="absolute -top-3 left-3 bg-white px-2 text-[8px] font-black text-slate-400 uppercase leading-none">HRS</span>
                   </div>
                </div>
              </div>
            ))}
          </div>
          <Button onClick={generateTimetable} variant="primary" className="w-full py-6 rounded-[2rem] mt-10 text-xl font-black tracking-widest uppercase">GENERATE <Zap size={24}/></Button>
        </Card>
      )}

      {step === 3 && timetable && (
        <div className="space-y-8 animate-premium uppercase">
          <div className="flex flex-col md:flex-row items-center justify-between gap-6 px-4 uppercase">
             <div className="text-left uppercase">
                <span className="text-[11px] font-black text-indigo-600 uppercase tracking-widest uppercase leading-none">SUCCESSFULLY GENERATED</span>
                <h4 className="text-4xl font-black text-slate-900 uppercase leading-none mt-3 uppercase">{timeframe} SCHEDULE</h4>
             </div>
             <div className="flex gap-3 w-full md:w-auto uppercase">
                <Button onClick={() => setStep(1)} variant="secondary" className="flex-1 md:flex-none uppercase py-4 font-black uppercase leading-none"><RotateCcw size={18}/> RESET</Button>
                <Button variant="primary" className="flex-1 md:flex-none uppercase py-4 font-black uppercase leading-none"><CheckCircle2 size={18}/> SAVE</Button>
             </div>
          </div>

          <Card className="p-0 overflow-x-auto border-none shadow-2xl uppercase">
            <table className="w-full border-collapse uppercase">
              <thead>
                <tr className="bg-slate-900 text-white uppercase">
                  <th className="p-6 text-center font-black text-[10px] uppercase tracking-widest border-r border-white/5 uppercase leading-none">TIME</th>
                  {(timeframe === 'DAY' ? ['TODAY'] : ['MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT', 'SUN']).map(d => (
                    <th key={d} className="p-6 text-center font-black text-[10px] uppercase tracking-widest border-l border-white/5 min-w-[160px] uppercase leading-none">{d}</th>
                  ))}
                </tr>
              </thead>
              <tbody className="divide-y divide-slate-100 bg-white uppercase">
                 {timetable[0].slots.map((slot, slotIdx) => (
                   <tr key={slot.time} className="hover:bg-slate-50 transition-colors uppercase">
                      <td className="p-6 flex flex-col items-center justify-center font-black bg-slate-50/50 border-r border-slate-100 uppercase">
                         <span className="text-xs text-indigo-600 font-black uppercase leading-none">{slot.time}</span>
                         <Clock size={12} className="text-slate-300 mt-2 uppercase" />
                      </td>
                      {timetable.map((day, dayIdx) => (
                        <td key={day.day} className="p-3 border-l border-slate-100 h-full uppercase">
                           <div className={`h-full min-h-[90px] rounded-2xl p-4 border-2 transition-all flex flex-col justify-between group ${day.slots[slotIdx].isBreak ? 'bg-slate-100 border-slate-100 text-slate-400' : 'bg-white border-slate-100 hover:border-indigo-400 hover:shadow-lg'}`}>
                              <div className="flex items-start justify-between uppercase">
                                 <textarea 
                                   rows="2"
                                   value={day.slots[slotIdx].activity}
                                   onChange={(e) => updateCell(dayIdx, slotIdx, e.target.value.toUpperCase())}
                                   className="bg-transparent border-none p-0 w-full text-[11px] font-black uppercase resize-none focus:ring-0 no-scrollbar uppercase leading-none"
                                 />
                                 {!day.slots[slotIdx].isBreak && <Edit3 size={10} className="text-slate-300 opacity-0 group-hover:opacity-100 uppercase" />}
                              </div>
                              <span className="text-[8px] font-bold opacity-50 uppercase tracking-widest uppercase leading-none">
                                {day.slots[slotIdx].isBreak ? 'BUFFER' : 'SESSION'}
                              </span>
                           </div>
                        </td>
                      ))}
                   </tr>
                 ))}
              </tbody>
            </table>
          </Card>
        </div>
      )}
    </div>
  );
};

